<div class="uk-section">
<div class="uk-container uk-container-small" dir="ltr">
    <% @activities.each do |activity| %>
        <ul class="uk-list uk-list-striped  uk-list-large">
            <li>
            <%= link_to activity.owner.username, profile_path(activity.owner.username) if activity.owner %> / 
            <%= render_activity activity %>
            </li>	
        </ul>
        <% end %>	
</div>
</div>