<%= stylesheet_link_tag 'nav' %> 

<div class="ar uk-section uk-section">
<div class="uk-container uk-container-small uk-margin-xlarge-bottom">
<div class="uk-padding-remove-top uk-padding">
  <%= link_to root_path do %>      
    <%=image_tag("cga53.svg", width: "300px", :class => "uk-margin-auto uk-navbar-item uk-logo")%>
  <% end %>
  </div>
  <div class="uk-width-large uk-margin-auto uk-background-default uk-padding">
  <div class="uk-form-stacked">

  <h1 class="ar uk-margin-medium-bottom uk-text-center">تسجيل الدخول</h1>

  <p class="ar uk-text-center"> أو تسجيل حساب <%= link_to "جديد", new_registration_path(resource_name) %></p>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: " ar uk-input uk-margin-small-top" } %>
    <%= f.input :password,
                input_html: { autocomplete: "current-password", class: "ar uk-input uk-margin-small-top" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="uk-margin-medium-top uk-text-center uk-text-bolder">
    <%= f.button :submit, "دخول", class: "ar uk-button uk-button-primary uk-button-large uk-width-1-1" %>
  </div>
<% end %>

</div></div></div></div>